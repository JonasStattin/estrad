{
	"build": {
		"html":    true,
		"compass": false
		},
	"watch": {
		"images": true,
		"svg":    true,
		"js":     true,
		"css":    false,
		"server": true
		},
	"process": {
		"server":  true,
		"compass": false
		},
	"task": {
		"js": {
			"jshint": true
			},
		"css": {
			"concat": true
			},
		"svg": {
			"svg2png": true
			},
		"images": {
			"minify": true
		} 
		},
	"server": {
		"proxy": true,
		"port":  8080,
		"template": {
			"folder": "modules",
			"templateSettings": {}
		}
		},
	"paths": {
		"server": {
			"listen": [
				"./index.js", 
				"./lib/**/*.js", 
				"routes.json"
			]
			},
		"style": {
			"src": [
				"./css/**/*.css", 
				"./modules/**/*.css", 
				"!css/main.css",
				"!/node_modules/**/*.js"
			],
			"listen": [
				"modules/**/*.css", 
				"css/**/*.css"
			],
			"dest": {
				"file": "main.css",
				"dir":  "./css/"
			}
			},
		"script": {
			"listen": [
				"js/**/*.js", 
				"modules/**/*.js", 
				"!/node_modules/**/*.js"
			],
			"dest": "main.js"
			},
		"svg2png": {
			"listen": [
				"img/**/*.svg"
			]
			},
		"image": {
			"listen": [
				"img/**/*.jpg", 
				"img/**/*.gif", 
				"img/**/*.png", 
				"img/**/*.svg"
			]
			},
		"build": {
			"src": [
				"./**/*.html",
				"!./modules/**/*.html", 
				"!./node_modules/**/*.html"
			],
			"dest": "./package"
		}
	}
}