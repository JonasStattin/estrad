{
	"css": {
		"watch":        true,
		"build":        false,
		"preprocessor": false,
		"paths": {
			"listen": [
				"css/**/*.css",
				"modules/**/*.css",
				"!css/main.css"
			],
			"src": [
				"css/**/*.css",
				"modules/**/*.css", 
				"!css/main.css"
			],
			"dest": {
				"file": "main.css",
				"dir": "css/"
			}
		}
	},

	"html": {
		"build": false,
		"paths": {
			"src": [
				"./**/*.html",
				"!./modules/**/*.html", 
				"!./node_modules/**/*.html"
			],
			"dest": "./package"
		}
	},

	"images": {
		"watch": true,
		"paths": {
			"listen": [
				"img/**/*.jpg", 
				"img/**/*.gif", 
				"img/**/*.png", 
				"img/**/*.svg"
			]
		}
	},

	"js": {
		"watch": true,
		"paths": {
			"listen": [
				"js/**/*.js", 
				"modules/**/*.js", 
				"!/node_modules/**/*.js"
			]
		}
	},

	"server": {
		"start": true,
		"proxy": false,
		"port":  8080,
		"template": {
			"folder": "modules",
			"templateSettings": {}
		}
	}
}