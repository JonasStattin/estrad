{
	"css": {
		"watch":        false,
		"build":        false,
		"preprocessor": false,
		"paths": {
			"listen": [
				"css/**/*.css",
				"modules/**/*.css",
				"!css/main.css"
			],
			"src": [
				"css/**/*.css",
				"modules/**/*.css", 
				"!css/main.css"
			],
			"dest": {
				"file": "main.css",
				"dir": "package/css/"
			}
		}
	},

	"html": {
		"build": false,
		"paths": {
			"src": [
				"./**/*.html",
				"!./modules/**/*.html", 
				"!./node_modules/**/*.html"
			],
			"dest": "./package"
		}
	},

	"images": {
		"watch": false,
		"paths": {
			"listen": [
				"img/**/*.jpg", 
				"img/**/*.gif", 
				"img/**/*.png", 
				"img/**/*.svg"
			]
		}
	},

	"js": {
		"watch": false,
		"build": false,
		"paths": {
			"require": "js/vendor/require.js",
			"listen": [
				"js/**/*.js", 
				"modules/**/*.js", 
				"!/node_modules/**/*.js"
			],
			"src":  "js/main.js",
			"dest": "package/js/main.js"
		}
	},

	"server": {
		"start": false,
		"proxy": false,
		"port":  8080,
		"template": {
			"folder": "modules",
			"templateSettings": {}
		}
	}
}