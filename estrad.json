{
	"sourceDir": "/",
	"css": {
		"watch":        true,
		"build":        false,
		"preprocessor": "stylus",
		"settings": {},
		"paths": {
			"listen": [
				"styl/**/*.styl"
			],
			"src": [
				"styl/*.styl"
			],
			"dest": {
				"file": "main.css",
				"dir": "package/css/"
			}
		}
	},

	"html": {
		"build": false,
		"paths": {
			"src": [
				"./**/*.html",
				"!./modules/**/*.html", 
				"!./node_modules/**/*.html"
			],
			"dest": "./package"
		}
	},

	"images": {
		"watch": false,
		"paths": {
			"listen": [
				"img/**/*.jpg", 
				"img/**/*.gif", 
				"img/**/*.png", 
				"img/**/*.svg"
			]
		}
	},

	"js": {
		"watch": false,
		"build": true,
		"paths": {
			"require": "js/vendor/require.js",
			"listen": [
				"js/**/*.js", 
				"modules/**/*.js", 
				"!/node_modules/**/*.js"
			],
			"src":  "js/main.js",
			"dest": "package/js/main.js"
		}
	},

	"server": {
		"start": false,
		"proxy": false,
		"port":  8080,
		"templateSettings": {}
	},

	"modulesDir": "modules"
}